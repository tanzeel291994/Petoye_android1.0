<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.startup.projectfinal.peyoye.ReportScreen$ReportScreenSecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:background="@color/medium_turquoise" >
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@color/medium_turquoise"
            android:padding="5dp"
            android:layout_weight="0.1"
            android:src="@drawable/back" />
        <TextView
            style="@style/text_view_DB1C44AEDDA8487EB1CD1BB20054838C_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textColor="@color/white"
            android:layout_weight="0.6"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />
        <Button
            android:id="@+id/cancel_button"
            style="@style/text_view_97C359870D95450A88B303D7F621BEA1_style"
            android:text="Cancel"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="Report as spam ?"
        style="@style/text_view_97C359870D95450A88B303D7F621BEA1_style"
        android:layout_margin="30dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:id="@+id/report_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/report_button"
        style="@style/text_view_97C359870D95450A88B303D7F621BEA1_style"
        android:text="Report"
        android:textColor="@color/white"
        android:background="@drawable/report_button_background"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>