<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_options"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="#8853D3E3"
    tools:context="com.startup.projectfinal.peyoye.PostOptions">
    <LinearLayout
        android:background="@drawable/post_options_background"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/text_view_FEA83333C5424DE8BA52770FD27EDF41_style"
            android:text="Follow"
            android:onClick="onClickFollow"
            android:textColor="@color/caribbean_green"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gainsboro"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            style="@style/text_view_FEA83333C5424DE8BA52770FD27EDF41_style"
            android:onClick="onClickReport"
            android:text="Report"
            android:textColor="@color/red"
            android:background="#00000000"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:text="Cancel"
        android:background="@drawable/post_options_background"
        style="@style/text_view_FEA83333C5424DE8BA52770FD27EDF41_style"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCancel"
        />
</LinearLayout>
