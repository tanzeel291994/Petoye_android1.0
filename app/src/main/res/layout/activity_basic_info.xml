<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.startup.projectfinal.peyoye.BasicInfo">

    <TextView
        style="@style/text_view_8A64EBE0E29E4BF9B539AB355607F8E9_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/medium_turquoise"
        android:text="@string/basic_info_header"
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        />

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:divider="@android:color/black"
        android:showDividers="middle"
        >
        <TableRow
            android:padding="5dp"
            android:id="@+id/trUsername">
            <TextView
                style="@style/text_view_F335C6E089554FA887D4424F172861A8_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_weight="0.5"
                />
            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ameya"
                android:layout_weight="0.5"
                />
        </TableRow>
        <View
            android:layout_margin="5dp"
            android:layout_height="1.0dp"
            android:background="@color/gainsboro"/>
        <TableRow
            android:padding="5dp"
            android:id="@+id/trUserCategory">
            <TextView
                style="@style/text_view_F335C6E089554FA887D4424F172861A8_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="You are a"
                android:layout_weight="0.5"
                />
            <Spinner
                android:id="@+id/spinner_user_category"
                style="@style/text_view_26D7B73CA3994A6BBCDD13564FFC15D6_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_weight="0.5"
                android:entries="@array/user_category_array"
                />
        </TableRow>
        <View
            android:layout_margin="5dp"
            android:layout_height="1.0dp"
            android:background="@color/gainsboro"/>

        <TableRow
            android:padding="5dp"
            android:id="@+id/trPetCategory">
            <TextView
                style="@style/text_view_F335C6E089554FA887D4424F172861A8_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="What kind of pet"
                android:layout_weight="0.5"
                />
            <Spinner
                android:id="@+id/spinner_pet_category"
                style="@style/text_view_F335C6E089554FA887D4424F172861A8_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_weight="0.5"
                android:entries="@array/pet_category_array"
                />
        </TableRow>

        <View
            android:layout_margin="5dp"
            android:layout_height="1.0dp"
            android:background="@color/gainsboro"/>
        <TableRow
            android:padding="5dp"
            android:id="@+id/trBreed">
            <TextView
                style="@style/text_view_F335C6E089554FA887D4424F172861A8_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:layout_weight="0.5"
                />
            <Spinner
                android:id="@+id/spinner_breed"
                style="@style/text_view_F335C6E089554FA887D4424F172861A8_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_weight="0.5"
                android:entries="@array/breed_array"
                />
        </TableRow>
        <View
            android:layout_margin="5dp"
            android:layout_height="1.0dp"
            android:background="@color/gainsboro"/>
    </TableLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <Button
            android:background="@drawable/done_button"
            android:layout_gravity="center"
            style="@style/text_view_CEF821399EF043A69B1291DCFC061277_style"
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickDoneButton"
            />
    </FrameLayout>
</LinearLayout>
